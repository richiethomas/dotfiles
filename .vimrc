" show line numbers
set number

" show matching opening and closing brackets, parens, etc
set showmatch

" highlight all matching instances during search
set hlsearch

" copies the previous indentation from the line above
set autoindent

" set number of spaces that autoindent will use
set shiftwidth=2

" turn on syntax highlighting
syntax on

" set number of spaces when tabbing
set softtabstop=2

" change tabs into spaces
set expandtab

